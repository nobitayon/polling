@using Delta.Polling.FrontEnd.Logics.Admin.Groups.Commands.AddGroup;
@model AddGroupCommand;

<form id="create-group"
      method="post"
      asp-page-handler="CreateGroup"
      onsubmit="return jQueryModalPost(this);">

    <div class="mb-1 row">
        <label class="col-md-3 col-form-label">Name</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Name" name="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-body">
        You will create group
    </div>

    <div class="mb-1 justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Create</button>
    </div>
</form>

<script type="text/javascript">
    $.validator.unobtrusive.parse("#create-group");
</script>




@page
@model TestModel

@{
    ViewData["Title"] = "Send Test Email";
    ViewBag.CurrentMenu = MenuFor.EmailsTest;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="text-decoration-none"
               asp-page="/Index">
                Home
            </a>
        </li>
        <li class="breadcrumb-item active"
            aria-current="page">
            @ViewData["Title"]
        </li>
    </ol>
</nav>

<h1>@ViewData["Title"]</h1>

<vc:error-viewer problem="@Model.Problem">
</vc:error-viewer>

<form method="post" class="col-8">
    <div class="mb-3">
        <label asp-for="@Model.Input.Tos" class="form-label"></label>
        <input asp-for="@Model.Input.Tos" class="form-control" required>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Input.Ccs" class="form-label"></label>
        <input asp-for="@Model.Input.Ccs" class="form-control" required>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Input.Notes" class="form-label"></label>
        <textarea asp-for="@Model.Input.Notes" class="form-control" rows="5" required></textarea>
    </div>

    <!-- Button trigger modal -->
    <button type="submit" class="btn btn-primary">
        Send
    </button>
    <a asp-page="/Index" class="btn btn-secondary">
        Back
    </a>
</form>

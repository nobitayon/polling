@page "{MovieId:Guid}"
@model DeleteModel

@if (Model.Movie is not null)
{
    ViewData["Title"] = "Delete Movie";

    <h1>Delete Movie @Model.Movie.Title</h1>

    <div class="mb-3">
        <label asp-for="@Model.Movie.Title" class="form-label"></label>
        <input asp-for="@Model.Movie.Title" class="form-control" required disabled readonly>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Movie.Budget" class="form-label"></label>
        <input type="number" asp-for="@Model.Movie.Budget" class="form-control" min="1000" max="100000" required disabled readonly>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Movie.Storyline" class="form-label"></label>
        <textarea asp-for="@Model.Movie.Storyline" class="form-control" rows="5" cols="50" required disabled readonly></textarea>
    </div>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
        Delete
    </button>
    <a asp-page="Details" asp-route-MovieId="@Model.MovieId" class="btn btn-outline-warning">Back</a>


    <!-- Modal -->
    <form method="post">
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Delete Movie!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure want to delete this movie ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <h1>Opps something went wrong!</h1>
}

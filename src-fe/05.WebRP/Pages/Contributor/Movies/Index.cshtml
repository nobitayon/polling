@page
@model IndexModel

@{
    ViewData["Title"] = "My Movies";
    ViewBag.CurrentMenu = MenuFor.ContributorMoviesIndex;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="text-decoration-none"
               asp-page="/Index">
                Home
            </a>
        </li>
        <li class="breadcrumb-item">
            <a class="text-decoration-none"
               asp-page="/Contributor/Index">
                Contributor
            </a>
        </li>
        <li class="breadcrumb-item active"
            aria-current="page">
            @ViewData["Title"]
        </li>
    </ol>
</nav>

<h1>@ViewData["Title"]</h1>

@await Component.InvokeAsync("ErrorViewer", Model.Error)

@if (TempData["success"] is not null)
{
    <div class="alert alert-primary alert-dismissible fade show col-5" role="alert">
        <strong>Success!</strong> @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["failed"] is not null)
{
    <div class="alert alert-danger alert-dismissible fade show col-5" role="alert">
        <strong>Failed!</strong> @TempData["failed"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-page="Add">
        Add Movie
    </a>
</div>

<div class="row">
    @foreach (var movie in Model.Movies)
    {
        <div class="col-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <a class="text-decoration-none" asp-page="Details" asp-route-movieId="@movie.Id">
                        <h5 class="card-title">
                            @movie.Title
                        </h5>
                    </a>
                    <p class="card-text">
                        @movie.BudgetDisplayText
                    </p>
                </div>
                <div class="card-footer @movie.StatusColor">
                    <small class="text-white">
                        <b>Status : @movie.Status</b>
                    </small>
                </div>
            </div>
        </div>
    }

    @Html.Raw(Model.Paging)
</div>

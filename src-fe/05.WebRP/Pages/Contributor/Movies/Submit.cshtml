@page "{MovieId:Guid}"
@model SubmitModel

@if (Model.Movie is not null)
{
    <h1 class="text-white">Submit Movie @Model.Movie.Title</h1>

    ViewData["Title"] = "Submit Movie";

    <div class="mb-3">
        <label asp-for="@Model.Movie.Title" class="form-label text-warning"></label>
        <input asp-for="@Model.Movie.Title" class="form-control" required disabled readonly />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Movie.Budget" class="form-label text-warning"></label>
        <input type="number" asp-for="@Model.Movie.Budget" class="form-control" min="1000" max="100000" required disabled readonly />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Movie.Storyline" class="form-label text-warning"></label>
        <textarea asp-for="@Model.Movie.Storyline" class="form-control" rows="5" cols="50" required disabled readonly></textarea>
    </div>

    <form method="post">
        <button type="submit" class="btn btn-outline-primary">Submit</button>
    </form>
    <a asp-page="Details" asp-route-MovieId="@Model.MovieId" class="btn btn-outline-warning">Back</a>
}
else
{
    <h1>Opps something went wrong!</h1>
}

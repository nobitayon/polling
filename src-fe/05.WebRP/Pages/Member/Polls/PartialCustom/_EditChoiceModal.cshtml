@using Delta.Polling.FrontEnd.Logics.Member.Choices.Commands.EditChoice;
@model UpdateChoiceCommand;

<form id="edit-choice"
      method="post"
      asp-page-handler="EditChoice"
      onsubmit="return jQueryModalPost(this);">
    <div class="mb-1 row">
        <input type="hidden" asp-for="@Model.PollId" name="PollId" />
    </div>

    <div class="mb-1 row">
        <input type="hidden" asp-for="@Model.ChoiceId" name="ChoiceId" />
    </div>

    <div class="mb-1 row">
        <label class="col-md-3 col-form-label">Description</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="Description" name="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-body">
        You will update choice 
    </div>

    <div class="mb-1 justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>
</form>

<script type="text/javascript">
    $.validator.unobtrusive.parse("#edit-choice");
</script>




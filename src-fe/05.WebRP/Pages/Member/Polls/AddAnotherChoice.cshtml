@page
@model AddAnotherChoiceModel

@{
    ViewData["Title"] = "Add Another Choice";
    ViewBag.CurrentMenu = MenuFor.MemberPollsIndex;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="text-decoration-none"
               asp-page="/Index">
                Home
            </a>
        </li>
        <li class="breadcrumb-item">
            <a class="text-decoration-none"
               asp-page="/Polls/Index">
                Polls
            </a>
        </li>
        <li class="breadcrumb-item">
            <a class="text-decoration-none"
               asp-page="/Member/Polls/Details">
                Details
            </a>
        </li>
        <li class="breadcrumb-item active"
            aria-current="page">
            @ViewData["Title"]
        </li>
    </ol>
</nav>

<h1>@ViewData["Title"]</h1>

<vc:error-viewer error=@Model.Error>
</vc:error-viewer>

<form method="post" class="col-8">
    <input type="hidden" asp-for="@Model.Input.PollId" />

    <div class="mb-3">
        <label asp-for="@Model.Input.Description" class="form-label"></label>
        <input type="text" asp-for="@Model.Input.Description" class="form-control" required>
    </div>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAnotherChoice">
        Save
    </button>
    <a asp-page="/Member/Polls/Details" asp-route-pollId="@Model.Input.PollId" class="btn btn-secondary">Back</a>

    <!-- Modal -->
    <div class="modal fade" id="addAnotherChoice" tabindex="-1" aria-labelledby="addAnotherChoiceLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAnotherChoiceLabel">Add Another choice</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure want to add this option ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

